@model IEnumerable<TestTask.Domain.DbEntities.Department>

@{
    ViewData["Title"] = "Index";
}

<h2>Departments</h2>

<ul class="nav nav-tabs nav-justified">
    <li><a asp-action="index" asp-controller="customerdetails" asp-route-customerId="@Context.Request.Query["customerId"]">General info</a></li>
    <li><a asp-action="index" asp-controller="usersinfo" asp-route-customerId="@Context.Request.Query["customerId"]">Users</a></li>
    <li class="active"><a href="#">Departments</a></li>
</ul>

<p>
    <a asp-action="CreateDepartment" asp-route-customerId="@Context.Request.Query["customerId"]">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
        </tr>
}
    </tbody>
</table>
